{
  "name": "brigo-bff",
  "author": "Loans Team",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "mocks": "cross-env FF__MOCKS=true yarn dev",
    "dev": "cross-env NODE_ENV=dev tsx watch src/main.ts",
    "start": "node -r newrelic build/main.js",
    "build": "rm -rf build/ && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "lint": "eslint './src/**/**/*.{ts,ts,js}'",
    "lint:windows": "eslint \"./src/**/**/*.{ts,ts,js}\"",
    "lint-fix": "eslint --fix './src/**/**/*.{ts,ts,js}'",
    "lint-fix:windows": "eslint --fix \"./src/**/**/*.{ts,ts,js}\"",
    "prettier": "prettier './src/**/**/*.{ts,ts,js}' --no-error-on-unmatched-pattern --write",
    "prettier:windows": "prettier \"./src/**/**/*.{ts,ts,js}\" --no-error-on-unmatched-pattern --write",
    "prepare": "husky install",
    "release": "standard-version",
    "tslint": "tsc --noEmit",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=\"--import tsx\" vitest run",
    "test:coverage": "cross-env NODE_ENV=test NODE_OPTIONS=\"--import tsx\" vitest run --coverage",
    "test:watch": "cross-env NODE_ENV=test NODE_OPTIONS=\"--import tsx\" vitest run --watchAll --coverage=false",
    "test:coverage:changed": "vitest run --coverage --changed=main"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/multipart": "^9.2.1",
    "@fastify/request-context": "^6.2.1",
    "@fastify/swagger": "^9.5.2",
    "@fastify/swagger-ui": "^5.2.3",
    "agentkeepalive": "^4.5.0",
    "axios": "^1.7.7",
    "axios-mock-adapter": "^1.22.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "fastify": "^5.6.1",
    "fastify-decorators": "^3.16.1",
    "fastify-plugin": "^5.1.0",
    "fastify-zod": "^1.4.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.3",
    "lru-cache": "^10.1.0",
    "newrelic": "^12.5.1",
    "pino": "^8.21.0",
    "qs": "^6.13.0",
    "redis": "^4.6.12",
    "reflect-metadata": "^0.2.1",
    "tsc-alias": "^1.8.10",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@swc/core": "^1.3.101",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/newrelic": "^9.14.5",
    "@types/node": "^20.9.0",
    "@types/qs": "^6.9.16",
    "@types/supertest": "^6.0.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@vitest/coverage-v8": "3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.3",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.0",
    "pino-pretty": "^10.2.3",
    "prettier": "^3.1.1",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.3",
    "typescript": "~5.5.4",
    "vitest": "^3.1.1",
    "vitest-mock-extended": "^3.1.0",
    "vitest-sonar-reporter": "^2.0.0"
  },
  "engines": {
    "node": ">=22.x"
  },
  "vitest": {
    "reportPath": "coverage",
    "reportFile": "sonar-reporter.xml",
    "indent": 4
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
